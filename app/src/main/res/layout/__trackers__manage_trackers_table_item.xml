<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="80dp"
    android:background="#606060">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/frameTrackerEdit"
            android:background="#ff0000"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/frameTrackerMove"
            android:layout_toStartOf="@+id/frameTrackerMove"
            android:layout_margin="5dp"></FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tracker Name Here"
            android:id="@+id/textViewReadingName"
            android:layout_centerVertical="true"
            android:textSize="20dp"
            android:textColor="#fff"
            android:layout_toLeftOf="@+id/frameTrackerEdit"
            android:layout_toRightOf="@+id/frameTrackerDelete"
            android:layout_toEndOf="@+id/frameTrackerDelete" />

        <FrameLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/frameTrackerMove"
            android:background="#0f0"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp" />

        <FrameLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/frameTrackerDelete"
            android:background="#00f"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="5dp" />
    </RelativeLayout>
</TableRow>