<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="60dp"
    android:background="#606060">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <FrameLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/frameTrackerEdit"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/frameTrackerMove"
            android:layout_toStartOf="@+id/frameTrackerMove"
            android:layout_margin="5dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageView4"
                android:src="@drawable/ic_mode_edit_3x" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tracker Name Here"
            android:id="@+id/textViewReadingName"
            android:layout_centerVertical="true"
            android:textSize="20dp"
            android:textColor="#fff"
            android:layout_toLeftOf="@+id/frameTrackerEdit"
            android:layout_toRightOf="@+id/frameTrackerDelete"
            android:layout_toEndOf="@+id/frameTrackerDelete" />

        <FrameLayout
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/frameTrackerMove"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageView5"
                android:src="@drawable/trackers_grabber" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/frameTrackerDelete"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="5dp" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageView3"
                android:src="@drawable/trackers_delete" />
        </FrameLayout>
    </RelativeLayout>
</TableRow>