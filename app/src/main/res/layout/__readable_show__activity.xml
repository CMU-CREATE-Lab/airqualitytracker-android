<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.cmucreatelab.tasota.airprototype.activities.readable_show.ReadableShowActivity"
    android:id="@+id/layoutShowAddress"
    android:background="#666">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pittsburgh, PA"
                    android:id="@+id/textShowAddressName"
                    android:gravity="center_vertical|center_horizontal"
                    android:textSize="24dp"
                    android:textColor="#000" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:id="@+id/frameClosestFeed">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Last reading from feed:"
                        android:id="@+id/textView19"
                        android:gravity="center_vertical|center_horizontal"
                        android:textSize="14dp"
                        android:textColor="#000" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Feed Name"
                        android:id="@+id/textViewClosestFeedName"
                        android:gravity="center_vertical|center_horizontal"
                        android:textSize="14dp"
                        android:textColor="#000" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="1"></FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="999"
                    android:id="@+id/textShowAddressAqiValue"
                    android:textSize="160dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="#fff" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AQI    /500"
                    android:id="@+id/textShowAddressAqiLabel"
                    android:gravity="center_vertical|center_horizontal"
                    android:textSize="25dp"
                    android:textColor="#fff" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="10" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0-50 AQI"
                    android:id="@+id/textShowAddressAqiRange"
                    android:gravity="center_vertical|center_horizontal"
                    android:textSize="20dp"
                    android:textColor="#fff" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Good"
                    android:id="@+id/textShowAddressAqiTitle"
                    android:gravity="center_vertical|center_horizontal"
                    android:textSize="14dp"
                    android:textColor="#000"
                    android:textStyle="bold" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Air quality is considered satisfactory, and air pollution poses little or no risk."
                    android:id="@+id/textShowAddressAqiDescription"
                    android:gravity="center_vertical|center_horizontal"
                    android:textSize="14dp"
                    android:textColor="#000"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal" >

                    <FrameLayout
                        android:layout_width="7dp"
                        android:layout_height="7dp"
                        android:background="#600"
                        android:visibility="invisible" />

                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal" >

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/imageView2"
                        android:src="@drawable/twitterlogo_small_white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Join the conversation @SpeckSensor"
                        android:id="@+id/textView9"
                        android:textColor="#fff"
                        android:textSize="14dp" />
                </LinearLayout>
            </FrameLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
